general {
        colors = true
        color_good = "#A3BE8C"
        color_degraded = "#EBCB8B"
        color_bad = "#BF616A"
        interval = 2
}

# order += "ipv6"
# order += "ip"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
# order += "disk /"
order += "load"
order += "memory"
order += "cpu_temperature"
order += "volume master"
order += "tztime local"

wireless _first_ {
        format_up = "ðŸ›œ (%quality at %essid) %ip"
        # format_down = "W: down"
        format_down = "W"
}

